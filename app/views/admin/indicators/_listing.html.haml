%tr{ id: "row-#{indicator.id}" }
	- if can? :destroy_multiple, Indicator
		%td.center.item-check
			= link_to '', admin_indicator_path(indicator), remote: true, class: 'show-row'
			%input{ type:'checkbox', class: 'filled-in', id: "checkbox-#{indicator.id}", 'checklist-model'=>'check', 'checklist-value'=>"#{indicator.id}", 'ng-click'=>"selectByCheck(#{@objects.size})"}
			%label{ for: "checkbox-#{indicator.id}" }

	%td.center
		= link_to '', admin_indicator_path(indicator, search: @query), remote: true, class: 'show-row'
		%span
			= indicator.name
	%td.center
		= link_to '', admin_indicator_path(indicator, search: @query), remote: true, class: 'show-row'
		%span
			= indicator.value
	%td.center.btn-w5
		= link_to admin_indicator_path(indicator), class: 'btn-floating waves-effect btn-flat', "data-toggle" => 'tooltip', "data-placement" => 'bottom', title: 'Ver Indicador' do
			= material_icon.md_24.remove_red_eye.css_class('md-dark')
	- if can? :update, Indicator
		%td.center.btn-w5
			= link_to edit_admin_indicator_path(indicator), class: 'btn-floating btn-flat', "data-toggle" => 'tooltip', "data-placement" => 'bottom', title: 'Editar' do
				= material_icon.md_18.create.css_class('md-dark')
	- if can? :clone, Indicator
		%td.center.btn-w5
			= link_to admin_indicator_clone_path(indicator), class: 'btn-floating waves-effect btn-flat', "data-toggle" => 'tooltip', "data-placement" => 'bottom', title: 'Clonar' do
				= material_icon.md_24.content_copy.css_class('md-dark')
	- if can? :delete, Indicator
		%td.center.btn-w5{style:'padding-right: 20px'}
			= link_to admin_indicator_path(indicator), class: 'btn-floating btn-flat', "data-toggle" => 'tooltip', "data-placement" => 'bottom', title: 'Borrar', method: :delete, data: { confirm: t('keppler.messages.data_confirm') } do
				= material_icon.md_18.delete.css_class('md-dark')
